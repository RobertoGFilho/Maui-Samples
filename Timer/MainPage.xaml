<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Timer.MainPage"
             BackgroundColor="#2B0B98">
    <StackLayout
        VerticalOptions="Center">

        <!--time-->
        <Label 
            x:Name="timeLabel"
            Text="0:000"
            FontSize="Header"
            TextColor="White"
            HorizontalTextAlignment="Center"/>
        
        <StackLayout
            Orientation="Horizontal"
            HorizontalOptions="Center"
            Spacing="12"
            Margin="0,60,0,0">

            <!--start stop-->
            <ImageButton 
                x:Name="startStopButton"
                Clicked="OnStartStop"
                Source="play" 
                BackgroundColor="Transparent" 
                HeightRequest="60"
                WidthRequest="60"/>

            <!--reset-->
            <ImageButton 
                Clicked="OnReset"
                Source="reset"             
                BackgroundColor="Transparent" 
                HeightRequest="60"
                WidthRequest="60"/>

        </StackLayout>

    </StackLayout>

</ContentPage>
